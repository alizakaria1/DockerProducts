name: dockercompose4707454613059864622
services:
  mssql:
    container_name: mssql
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: YourStrong@Pass
    image: alizakaria/productsdb:v4
    networks:
      product-network: null
    ports:
      - mode: ingress
        target: 1433
        published: "4000"
        protocol: tcp
    volumes:
      - type: volume
        source: mssql-data
        target: /var/opt/mssql
        volume: {}
  nginx:
    container_name: nginx
    depends_on:
      products:
        condition: service_started
        required: true
    image: alizakaria/nginxproduct:latest
    networks:
      product-network: null
    ports:
      - mode: ingress
        target: 80
        published: "3000"
        protocol: tcp
  products:
    depends_on:
      mssql:
        condition: service_started
        required: true
      redis:
        condition: service_started
        required: true
    deploy:
      replicas: 3
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ConnectionStrings__DefaultConnection: Server=mssql;Database=DockerProduct;User ID=sa;Password=YourStrong@Pass;encrypt=False;
      ConnectionStrings__Redis: redis-cache
      IsRedisEnabled: "true"
    image: products:v6
    networks:
      product-network: null
    ports:
      - mode: ingress
        target: 8080
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\user\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\user\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
  redis:
    container_name: redis-cache
    image: redis:latest
    networks:
      product-network: null
    ports:
      - mode: ingress
        target: 6379
        published: "4040"
        protocol: tcp
    volumes:
      - type: volume
        source: redis-data
        target: /data
        volume: {}
networks:
  product-network:
    name: dockercompose4707454613059864622_product-network
volumes:
  mssql-data:
    name: dockercompose4707454613059864622_mssql-data
  redis-data:
    name: dockercompose4707454613059864622_redis-data